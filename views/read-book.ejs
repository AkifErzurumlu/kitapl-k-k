<%- include('layout') %>

<div class="row justify-content-center mt-4">
    <div class="col-lg-8">
        
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/list" class="btn btn-outline-light text-white">‚Üê Listeye D√∂n</a>
            <span class="badge bg-warning text-dark fs-6"><%= book.author %></span>
        </div>

        <div class="card shadow-lg border-0 mb-4" style="background-color: #fdf6e3; color: #586e75; min-height: 500px;">
            <div class="card-body p-5">
                <h1 class="display-5 fw-bold mb-4 text-center" style="color: #b58900; font-family: 'Georgia', serif;">
                    <%= book.title %>
                </h1>
                
                <hr style="border-color: #b58900; opacity: 0.3;">
                
                <div class="book-content mt-4" style="font-family: 'Georgia', serif; font-size: 1.3rem; line-height: 1.8; white-space: pre-wrap; text-align: justify;">
                    <% if (content) { %>
                        <%= content %>
                    <% } else { %>
                        <div class="text-center mt-5 opacity-50">
                            <p>Hen√ºz bu kitaba bir i√ßerik eklenmemi≈ü.</p>
                            <a href="/edit/<%= book._id %>" class="btn btn-outline-secondary btn-sm">‚úçÔ∏è Metin Ekle</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="card shadow-lg border-0 mb-5">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h4 class="fw-bold" style="color: #667eea;">üí¨ Kitap Tartƒ±≈ümasƒ±</h4>
            </div>
            
            <div class="card-body px-4">
                
                <div class="comments-section mb-4" style="max-height: 400px; overflow-y: auto;">
                    <% if (typeof comments == 'undefined' || comments.length === 0) { %>
                        <div class="alert alert-light text-center text-muted">
                            Hen√ºz kimse yorum yapmamƒ±≈ü. ƒ∞lk g√∂r√º≈ü√º sen bildir! üöÄ
                        </div>
                    <% } else { %>
                        <% comments.slice().reverse().forEach(comment => { %> 
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold shadow-sm" 
                                         style="width: 45px; height: 45px; background-color: #667eea; font-size: 1.2rem;">
                                        <%= comment.username.charAt(0).toUpperCase() %>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3 p-3 rounded bg-light">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="fw-bold mb-1 text-dark"><%= comment.username %></h6>
                                        <small class="text-muted" style="font-size: 0.75rem;">
                                            <%= new Date(comment.date).toLocaleDateString('tr-TR') %>
                                        </small>
                                    </div>
                                    <p class="mb-0 text-secondary"><%= comment.text %></p>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>

                <form action="/comment" method="POST" class="d-flex gap-2 border-top pt-3">
                    <input type="hidden" name="bookTitle" value="<%= book.title %>">
                    <input type="hidden" name="redirectId" value="<%= book._id %>">
                    
                    <input type="text" name="commentText" class="form-control form-control-lg" placeholder="Bu kitap hakkƒ±nda ne d√º≈ü√ºn√ºyorsun?..." required autocomplete="off">
                    
                    <button type="submit" class="btn btn-primary btn-lg text-white px-4" style="background-color: #667eea; border: none;">
                        G√∂nder
                    </button>
                </form>

            </div>
        </div>
        </div>
</div>

</div> </body> </html>