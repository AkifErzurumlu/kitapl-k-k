<%- include('layout') %>
<div class="card p-4 shadow-sm border-0 bg-white">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Kitaplarım</h2>
        <a href="/add" class="btn btn-success btn-sm">+ Yeni Kitap</a>
    </div>
    
    <table class="table table-hover mt-2">
        <thead class="table-light">
            <tr>
                <th>Kitap Adı</th>
                <th>Yazar</th>
                <th>Basım Tarihi</th>
                <th class="text-end">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <% if (books.length === 0) { %>
                <tr>
                    <td colspan="4" class="text-center text-muted py-3">Henüz hiç kitap eklemedin.</td>
                </tr>
            <% } else { %>
                <% books.forEach(book => { %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.year %></td>
                    <td class="text-end">
                        <a href="/edit/<%= book._id %>" class="btn btn-outline-warning btn-sm mx-1">Düzenle</a>
                        <a href="/delete/<%= book._id %>" class="btn btn-outline-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?')">Sil</a>
                    </td>
                </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</div>
</body></html>