<%- include('layout') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-white fw-bold">üìö Kitap Listem</h2>
    <a href="/add" class="btn btn-light btn-sm">+ Yeni Ekle</a>
</div>

<div class="row">
    <% if (books.length === 0) { %>
        <div class="col-12 text-center">
            <div class="alert alert-light opacity-75">
                Listen bombo≈ü! Hemen bir kitap ekle.
            </div>
        </div>
    <% } else { %>
        <% books.forEach(book => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm <%= book.isRead ? 'border-success' : 'border-0' %>" 
                     style="<%= book.isRead ? 'border-width: 2px;' : '' %>">
                    
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title fw-bold" style="color: #667eea;"><%= book.title %></h5>
                            
                            <% if (book.isRead) { %>
                                <span class="badge bg-success">‚úÖ Okundu</span>
                            <% } else { %>
                                <span class="badge bg-secondary">‚è≥ Okunacak</span>
                            <% } %>
                        </div>
                        
                        <h6 class="card-subtitle mb-3 text-muted"><%= book.author %></h6>

                        <form action="/toggle-read/<%= book._id %>" method="POST" class="mb-3">
                            <button type="submit" class="btn btn-sm w-100 <%= book.isRead ? 'btn-outline-secondary' : 'btn-success' %>">
                                <%= book.isRead ? 'Geri Al (Okunmadƒ± Yap)' : '‚úÖ Okudum Olarak ƒ∞≈üaretle' %>
                            </button>
                        </form>
                    </div>
                    
                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a href="/edit/<%= book._id %>" class="btn btn-outline-warning btn-sm">
                            ‚úèÔ∏è D√ºzenle
                        </a>

                        <form action="/delete-book/<%= book._id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm">üóëÔ∏è Sil</button>
                        </form>
                    </div>

                </div>
            </div>
        <% }) %>
    <% } %>
</div>

<div class="text-center mt-4">
    <a href="/books" class="btn btn-outline-light text-white text-decoration-none">‚Üê Ana Ekrana D√∂n</a>
</div>

</div> </body>
</html>